# Example environment variables for backend
# Copy this file to .env and replace placeholders with real values (do NOT commit secrets)

# MongoDB connection string (MongoDB Atlas or local). Required in production.
# Example: mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_URI=

# JWT secret for signing tokens
JWT_SECRET=

# Server port (optional). Default: 10000
PORT=10000

# NODE_ENV=development OR production
NODE_ENV=development
# Example environment variables for backend
# Copy this file to backend/.env and fill values locally (do NOT commit secrets)

PORT=10000
MONGODB_URI=your-mongodb-atlas-connection-string
JWT_SECRET=your-jwt-secret
NODE_ENV=development
