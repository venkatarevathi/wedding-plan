{
  "name": "wedding-planner",
  "version": "1.0.0",
  "description": "Full-stack wedding planner application with React frontend and Node.js backend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "start": "cd backend && node server.js",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:start": "cd frontend && npm run preview",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "clean": "rimraf backend/node_modules frontend/node_modules node_modules",
    "postinstall": "cd backend && npm install"
  },
  "keywords": [
    "wedding",
    "planner",
    "react",
    "nodejs",
    "mongodb",
    "fullstack"
  ],
  "author": "Team 1",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  }
}